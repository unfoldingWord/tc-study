{
  "name": "@bt-synergy/package-builder-engine",
  "version": "0.1.0",
  "description": "Platform-agnostic engine for downloading, parsing, building, and compressing resource packages",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "door43",
    "bible",
    "translation",
    "package",
    "builder"
  ],
  "license": "MIT",
  "dependencies": {
    "@bt-synergy/door43-api": "workspace:*",
    "@bt-synergy/resource-parsers": "workspace:*",
    "@bt-synergy/resource-adapters": "workspace:*",
    "@bt-synergy/package-builder": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "jszip": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "jszip": {
      "optional": true
    }
  }
}

