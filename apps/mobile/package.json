{
  "name": "@bt-synergy/mobile",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "cd android && gradlew.bat app:assembleDebug -PreactNativeArchitectures=x86_64 && cd .. && adb install -r android/app/build/outputs/apk/debug/app-debug.apk && adb shell am start -n com.abelpz.btsynergy/.MainActivity",
    "android:build": "cd android && gradlew.bat app:assembleDebug -PreactNativeArchitectures=x86_64",
    "android:install": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "build:android:debug": "cd android && node ../scripts/gradlew.js assembleDebug",
    "build:android:release": "cd android && node ../scripts/gradlew.js assembleRelease",
    "build:android:clean": "cd android && node ../scripts/gradlew.js clean",
    "install:android:debug": "adb install android/app/build/outputs/apk/debug/app-debug.apk",
    "install:android:release": "adb install android/app/build/outputs/apk/release/app-release.apk",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "resource:build": "tsx scripts/resource-package-builder/cli/build-tarball.ts build",
    "test:door43": "bun run scripts/test-door43-integration.ts",
    "resource:list": "tsx scripts/resource-package-builder/cli/build-tarball.ts list-packages",
    "resource:test": "tsx scripts/resource-package-builder/cli/build-tarball.ts test-download",
    "resource:help": "tsx scripts/resource-package-builder/cli/build-tarball.ts help",
    "convert:resources": "cd ../../../bt-toolkit/resource-downloader && npm run convert-app-db && cd ../../../bt-synergy/apps/mobile",
    "download:resources": "cd ../../../bt-toolkit/resource-downloader && npm run download && cd ../../../bt-synergy/apps/mobile",
    "setup:resources": "cd ../../../bt-toolkit/resource-downloader && npm run start:app && cd ../../../bt-synergy/apps/mobile"
  },
